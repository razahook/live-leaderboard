{
  "version": 2,
  "builds": [
    { "src": "src/api/index.py", "use": "@vercel/python" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "src/api/index.py" },
    { "src": "/(.*)", "dest": "public/$1" }
  ],
  "env": {
    "PYTHONPATH": "src"
  }
}
